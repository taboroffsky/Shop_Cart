@model Shop_Cart.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Product Details</h2>

<div class="product-detail">
    <div class="product-image">
        <img src="@Url.Content("~/Content/Images/"+ Model.Image)"/>
    </div>
    <div class="product-detail-content">
        <p>Product Name: @Model.ProductName</p>
        <p>Product Price: @String.Format("{0:N0}", Model.Price)</p>
        <p>@Html.ActionLink("Add to Cart","Index","ShoppingCart", new {id = Model.ProductId })</p>
    </div>

</div>
